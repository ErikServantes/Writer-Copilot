body, html {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f0f0f0;
    color: #333;
}

header {
    background-color: #333;
    color: #fff;
    padding: 10px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.menu-btn {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.menu-btn__burger {
    width: 25px;
    height: 3px;
    background-color: #fff;
    margin: 5px;
    transition: all 0.3s ease;
}

@media (max-width: 768px) {
    .menu-btn {
        display: flex;
    }

    .nav ul {
        position: fixed;
        width: 100%;
        height: 100vh;
        top: 0;
        left: -100%;
        flex-direction: column;
        background-color: #555;
        align-items: center;
        justify-content: center;
        transition: left 0.3s ease;
    }

    .nav.active ul {
        left: 0;
    }
}

nav ul li {
    margin: 10px 0;
}

nav ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.2em;
}

main {
    padding: 20px;
    text-align: center;
}

footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 10px 0;
}
